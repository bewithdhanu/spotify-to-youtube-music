# Spotify API Configuration
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8080/callback

# YouTube Music Configuration (OAuth2)
# Get these from Google Cloud Console after setting up OAuth2 credentials
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# Matching Configuration
# Minimum similarity score for track matching (0.0 to 1.0)
MATCH_THRESHOLD=0.8
# Maximum number of search results to consider
MAX_SEARCH_RESULTS=5

# Transfer Settings
# Number of tracks to process in each batch
BATCH_SIZE=50
# Number of retry attempts for failed operations
RETRY_ATTEMPTS=3
# Delay between retry attempts (seconds)
RETRY_DELAY=1.0

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# Log file path (optional)
LOG_FILE=spotify_to_youtube.log
